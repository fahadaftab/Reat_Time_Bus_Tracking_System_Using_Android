<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RoleActivity">
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:src="@drawable/ic_bus_school"
      android:alpha="0.1"/>

    <FrameLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:layout_gravity="center"

                android:elevation="5dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/download"
                    />
            </FrameLayout>

            <util.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="35dp"
                android:layout_marginBottom="50dp"/>
            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:elevation="5dp"
                android:background="@drawable/button">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/circle_grew"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_user"
                            android:tint="@color/white"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                    <EditText
                        android:layout_marginLeft="10dp"
                        android:id="@+id/username"
                        android:layout_gravity="start"
                        android:gravity="start"
                        style="@style/FullWidthEditText"
                        android:hint="Username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </FrameLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <FrameLayout
                android:elevation="5dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/button">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/circle_grew"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_password"
                            android:tint="@color/white"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                    <EditText
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:id="@+id/password"
                        android:inputType="textPassword"
                        style="@style/FullWidthEditText"
                        android:hint="Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </FrameLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />


            <Button
                android:id="@+id/login"
                android:elevation="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="      Login   "
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="false"
                android:background="@drawable/button"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                />
            <Button
                android:id="@+id/registerDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="      Register As Driver       "
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="false"
                android:background="@drawable/button"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:elevation="5dp"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:tint="@color/black"
                android:src="@drawable/or"/>
            <Button
                android:id="@+id/registerStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="      Register As User       "
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="false"
                android:background="@drawable/button"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </FrameLayout>
    <Button
        android:background="@drawable/button"
        android:id="@+id/about_us"
        android:layout_margin="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorPrimary"
        android:textStyle="bold"
        android:text="           About Us          "/>

</FrameLayout>